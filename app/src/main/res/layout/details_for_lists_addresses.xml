<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/details_main_scrollview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_head_text"
            style="@style/details_head_text"
            android:layout_marginTop="@dimen/standard" />

        <ImageView
            android:id="@+id/details_image"
            style="@style/details_image"
            android:layout_marginTop="@dimen/half"
            android:adjustViewBounds="true"
            android:contentDescription="@string/details_image" />

        <TextView
            android:id="@+id/image_description"
            style="@style/details_image_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard"
            android:layout_marginTop="@dimen/standard"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address"
                style="@style/details_description.details_addresses_description_item"
                android:drawablePadding="@dimen/quarter"
                android:drawableStart="@drawable/notebook" />

            <TextView
                android:id="@+id/webpage"
                style="@style/details_description.details_addresses_description_item"
                android:layout_marginTop="@dimen/quarter"
                android:autoLink="web"
                android:drawablePadding="@dimen/quarter"
                android:drawableStart="@drawable/www"
                android:textColorLink="@color/colorlink" />

            <TextView
                android:id="@+id/email"
                style="@style/details_description.details_addresses_description_item"
                android:layout_marginTop="@dimen/quarter"
                android:autoLink="email"
                android:drawablePadding="@dimen/quarter"
                android:drawableStart="@drawable/envelope"
                android:textColorLink="@color/colorlink" />

            <TextView
                android:id="@+id/phone"
                style="@style/details_description.details_addresses_description_item"
                android:layout_marginTop="@dimen/quarter"
                android:autoLink="phone"
                android:drawablePadding="@dimen/quarter"
                android:drawableStart="@drawable/chat"
                android:textColorLink="@color/colorlink" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/back_list_button"
            style="@style/details_back_button"
            android:layout_marginBottom="@dimen/standard"
            android:layout_marginTop="@dimen/standard"
            android:contentDescription="@string/back_list_button"
            android:src="@drawable/ok_button_details" />

    </LinearLayout>

</ScrollView>