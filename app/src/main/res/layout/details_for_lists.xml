<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/details_lists_main_scrollview"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_head_text"
            style="@style/details_lists_head_text_portrait"
            android:layout_marginTop="@dimen/standard" />

        <ImageView
            android:id="@+id/details_image"
            style="@style/details_lists_image"
            android:layout_marginTop="@dimen/half"
            android:adjustViewBounds="true"
            android:contentDescription="@string/details_image" />

        <TextView
            android:id="@+id/image_description"
            style="@style/details_lists_image_description_portrait" />

        <TextView
            android:id="@+id/details_description"
            style="@style/details_description"
            android:layout_marginEnd="@dimen/standard"
            android:layout_marginStart="@dimen/standard"
            android:layout_marginTop="@dimen/standard" />

        <ImageButton
            android:id="@+id/back_list_button"
            style="@style/details_lists_back_button"
            android:layout_marginBottom="@dimen/standard"
            android:layout_marginTop="@dimen/standard"
            android:contentDescription="@string/back_list_button"
            android:src="@drawable/ok_button_details" />

    </LinearLayout>

</ScrollView>